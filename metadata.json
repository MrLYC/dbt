{
  "version": "0.1.7",
  "package": "github.com/nikogura/dbt",
  "description": "Distributed Binary Toolkit - A framework for running self-updating signed binaries from a central, trusted repository.",
  "repository": "http://localhost:8081/artifactory/dbt",
  "building": {
    "targets": [
      "darwin/amd64",
      "linux/amd64"
    ],
    "extras": [
      {
        "template": "install_dbt.tmpl",
        "filename": "install_dbt.sh",
        "executable": true
      }
    ]
  },
  "publishing": {
    "targets": [
      {
        "src": "install_dbt.sh",
        "dst": "{{.Repository}}/install_dbt.sh",
        "sig": true,
        "checksums": false
      },
      {
        "src": "dbt_darwin_amd64",
        "dst": "{{.Repository}}/{{.Version}}/darwin/amd64/dbt",
        "sig": true,
        "checksums": false
      },
      {
        "src": "dbt_linux_amd64",
        "dst": "{{.Repository}}/{{.Version}}/linux/amd64/dbt",
        "sig": true,
        "checksums": false
      }
    ]
  }
}
